{
    "manifest_version": 3,
    "name": "Kaiten daily helper",
    "version": "1.6.0",
    "description": "Автоматическая навигация в Kaiten во время встреч.",
    "content_scripts": [
      {
        "matches": ["*://kaiten.x5.ru/*"],
        "js": ["images.js", "utils.js", "script.js"],
        "css": ["style.css"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon-off.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon-on.png"
    },
    "permissions": [
      "tabs",
      "storage"
    ],
    "host_permissions": [
      "https://kaiten.x5.ru/*"
    ]
  }
  